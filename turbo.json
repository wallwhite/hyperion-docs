{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["API_RES_PATH", "IS_PROD_STATIC", "GITHUB_PAGES_REPO_NAME"],
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": ["dist/**", "!.dist/cache/**"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": ["dist/**", "!.dist/cache/**"]
    },
    "typegen": {
      "dependsOn": ["^typegen"],
      "outputs": ["dist/**", "!.dist/cache/**"]
    },
    "build:openapi": {
      "dependsOn": ["^build:openapi"],
      "outputs": ["apps/docs/content/docs/openapi/**"],
      "cache": false
    },
    "build:api-doc": {
      "dependsOn": ["^build:api-doc"],
      "outputs": ["apps/docs/content/docs/**"],
      "env": ["API_RES_PATH", "IS_PROD_STATIC", "GITHUB_PAGES_REPO_NAME"],
      "cache": false
    }
  }
}
